{
  "name": "dragonfly",
  "private": "true",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "concurrently --kill-others 'npm run buildDev ' 'python3 server/run.py run'",
    "buildDev": "npm run clean && concurrently --kill-others 'npm run watch'",
    "clean": "rm -fr static/dist/",
    "watch": "webpack --watch --progress --config ./webpack.dev.config.js",
    "webpack": "webpack --progress",
    "startProd": "concurrently --kill-others 'npm run buildProd' 'python3 server/run.py run'",
    "buildProd": "npm run clean && concurrently --kill-others 'webpack --progress --config ./webpack.prod.config.js'",
    "lint": "npm run htmllint & npm run scsslint & npm run eslint & npm run pythonlint",
    "htmllint": "./node_modules/.bin/htmlhint --config .htmlhintrc src",
    "scsslint": "./node_modules/.bin/sass-lint src '**/*.scss' -v -q",
    "eslint": "./node_modules/.bin/eslint src",
    "pythonlint": "find ./server -name '*.py' | xargs pep8 --max-line-length=200 --exclude='server/commands/dht11.py'"
  },
  "author": "Cyrille Gindreau",
  "dependencies": {
    "angular": "1.6.8",
    "angular-route": "1.6.8",
    "@uirouter/angularjs": "1.0.13",
    "d3": "4.12.2",
    "jquery": "3.2.1",
    "angular-animate": "1.6.8",
    "angular-material": "1.1.6",
    "angular-aria": "1.6.8"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-loader": "7.1.2",
    "babel-plugin-angularjs-annotate": "0.8.2",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "code-assess": "0.2.7",
    "concurrently": "3.5.1",
    "css-loader": "0.28.9",
    "csslint": "1.0.5",
    "eslint": "4.15.0",
    "eslint-plugin-import": "2.8.0",
    "exports-loader": "0.6.4",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "html-loader": "0.5.5",
    "htmlhint": "0.9.13",
    "imports-loader": "0.7.1",
    "less": "2.7.3",
    "less-loader": "4.0.5",
    "node-sass": "4.7.2",
    "sass-lint": "1.12.1",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.1",
    "uglifyjs-webpack-plugin": "0.4.6",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "2.9.2"
  }
}
